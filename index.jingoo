<!DOCTYPE html>
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

  <title>{{ title }}</title>
</head>
<body>
  <h1>{{ title }}</h1>

  <div class="m-3 col-10">
    <h3>Uploaded File List</h3>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>File name</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
          {% for file in files %}
          <tr>
            <td></td>
            <td><a href="{{ file.url }}">{{ file.name }}</a></td>
            <td>{{ file.descr }}</td>
          </tr>
          {% endfor %}
      </tbody>
    </table>
  </div>

  <div class="m-3 col-10">
    <form method="post" action="upload" enctype="multipart/form-data">
      <h3>Upload Form</h3>
      <div class="form-group">
        <label>File: </label>
        <input type="file" name="upfile" required>
        <div class="form-inline">
          <label>Description: </label>
          <input type="text" name="description" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary" >Upload</button>
      </div>
    </form>
  </div>

  {% if uploaded %}
  <h5>{{ upload_status }}</h5>
  {% endif %}
  
  {% if is_debug %}
  <div class="m-5">
    <h3>Info</h3>
    <p>Upload file using curl
      <code>
        curl -X POST -F upfile=@/path/to/file -F description="D35CR1PT10N" http://&lt;host&gt;/upload
      </code>
    </p>
    <p>Download file using curl
      <code>
        curl -O http://&lt;host&gt;/download/&lt;uuid&gt;
      </code>
    </p>
  </div>
  {% endif %}


  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>